{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "IdentityServer",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "buildIdentityServer",
            "program": "${workspaceFolder}/src/IdentityServer/bin/Debug/net6.0/IdentityServer.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/IdentityServer",
            "stopAtEntry": false,
            // "serverReadyAction": {
            //     "action": "openExternally",
            //     "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            // },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        },
        {
            "name": "API",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "buildApi",
            "program": "${workspaceFolder}/src/Api/bin/Debug/net6.0/Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/Api",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        },
        {
            "name": "Client",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "buildClient",
            "program": "${workspaceFolder}/src/Client/bin/Debug/net6.0/Client.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/Client",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "console": "integratedTerminal",
        }
    ]
}